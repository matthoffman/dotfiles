export MAVEN_HOME=$HOME/tools/maven
export M2_HOME=$HOME/tools/maven
#export GROOVY_HOME=$HOME/tools/groovy
if [ -d /opt/local/share/java/groovy ]; then
  export GROOVY_HOME=/opt/local/share/java/groovy
fi

export ANT_HOME=$HOME/tools/apache-ant-1.7.0
#export JAVA_HOME=
if [ -d /System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home ]; then 
  export JAVA_HOME=/System/Library/Frameworks/JavaVM.framework/Versions/1.6/Home/
fi  

if [ -d $HOME/tools/gradle ]; then
  export GRADLE_HOME=$HOME/tools/gradle
fi

export SCALA_HOME=$HOME/tools/scala

if [ -d $HOME/tools/grails ]; then
  export GRAILS_HOME=$HOME/tools/grails
fi

#export GROOVY_HOME=$HOME/tools/groovy
export SCALA_C_DIR=$HOME/src/scala/continuations
export PLAY_HOME=$HOME/tools/play
PATH=$MAVEN_HOME/bin:$JAVA_HOME/bin:/usr/local/bin:$PATH:$ANT_HOME/bin:$SCALA_HOME/bin
if [ -d $HOME/.rbenv ]; then 
  export PATH=$HOME/.rbenv/bin:$HOME/.rbenv/shims:$PATH
  eval "$(rbenv init -)"
fi
if [ -d ~/bin ]; then
	export PATH=~/bin:$PATH  # add your bin folder to the path, if you have it.  It's a good place to add all your scripts
fi

if [ -d ~/src/dotfiles/bin ]; then
	export PATH=~/src/dotfiles/bin:~/src/dotfiles/bin/git-scripts:$PATH  # add your bin folder to the path, if you have it
fi

export PATH
